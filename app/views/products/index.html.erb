<%= render "layouts/header" %>
<div class = "container">
  <table class = "table table-hover table-sm">
    <thead>
      <tr class = "row pl-3">
        <th class = "col-3"> Name
        <th class = "col-3"> Unit
        <th class = "col-1"> Show
        <th class = "col-1"> Destroy
      </tr>
    </thead>
    <tbody>
    <% @products.each do |product|%>
      <tr class = "row pl-3">
        <td class = "col-3"><%= product.name%>
        <td class = "col-3"><%= product.unit%>
        <td class = "col-1"><%= link_to 'Show', product_path(product) %>
        <td class = "col-1"><%= link_to 'Delete', product_path(product), method: :delete %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
